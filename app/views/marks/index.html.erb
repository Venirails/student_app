<p id="notice"><%= notice %></p>

<h1>Marks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mark1</th>
      <th>Mark2</th>
      <th>Mark3</th>
      <th>Total</th>
      <th>Grade</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marks.each do |mark| %>
      <tr>
        <td><%= mark.name %></td>
        <td><%= mark.mark1 %></td>
        <td><%= mark.mark2 %></td>
        <td><%= mark.mark3 %></td>
        <td><%= mark.total %></td>
        <td><%= mark.grade %></td>
        <td><%= mark.student_id %></td>
        <td><%= link_to 'Show', mark %></td>
        <td><%= link_to 'Edit', edit_mark_path(mark) %></td>
        <td><%= link_to 'Destroy', mark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

